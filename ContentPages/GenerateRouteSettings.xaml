<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RunningApp.ContentPages.GenerateRouteSettings"
             Title="Generate Route Settings">
    <ScrollView>
        <Grid RowDefinitions="*, *" ColumnDefinitions="*, *">
            <Label x:Name="lblGeneratedRoute"
                   Grid.Row="0"
                   Grid.Column="0"
                   Text="Distanced Locked:"
                   VerticalOptions="StartAndExpand"/>
            
            <Switch x:Name="swtchLockedDistance"
                    Grid.Row="0"
                    Grid.Column="1"
                    VerticalOptions="Start"/>
            
            <Label x:Name="lblFurthestDistance"
                   Grid.Row="1"
                   Grid.Column="0"
                   VerticalTextAlignment="Start"
                   Text="Furthest Distance allowed from current location:(Miles)"/>
            
            <Entry x:Name="txtFurthestDistanceAllowed"
                   Grid.Column="1"
                   Grid.Row="1"
                   VerticalOptions="Start"
                   Placeholder="4"/>
            
        </Grid>
    </ScrollView>
</ContentPage>